    <body>
        <header> 

            <!-- 1ère navbar -->
            <div class="container-fluid">
                <div class="row d-flex">
                    <div class="col-lg-4 text-center">
                        <a href="{{ path("homepage") }}"><img src="/assets/img/logo2.png" alt="Logo Cosmeplanet" class="img-fluid logo"></a>
                    </div>
                    <div class="col-lg-4 nav-item active">
                        <form>
                            <div class="input-group persobar">
                                <input class="form-control search" type="text color" placeholder="Rechercher" aria-label="Search">
                                <div class="input-group-append">
                                    <span class="input-group-text amber lighten-3" id="basic-text1">
                                    <i><img src="/assets/img/loupe.png" class="loupe"></i></span>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-2 offset-lg-2 d-flex justify-content-end">
                        <a href="{{ path("account") }}" class="cp-icone"><img src="/assets/img/profil.png" alt="accéder à votre espace client"></a>
                       <a href="#" class="cp-icone"> <img src="/assets/img/shop.png" alt="accéder à votre panier"></a>
                    </ul>
                    </div>
