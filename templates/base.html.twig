                    <div class="col-lg-4">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb purple lighten-4">
                                <li class="breadcrumb-item"><a class="black-text" href="{{ path("homepage") }}">Home</a><i class="fas fa-angle-right mx-2"
                                    aria-hidden="true"></i></li>
                                <li class="breadcrumb-item active">XXX</li>
                            </ol>
                        </nav>    
                    </div>
                        
                    <div class="col-lg-8 marge-nav align-self-start   ">
                        <nav class="navbar navbar-expand-lg py-3">
                            
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"><img src="assets/img/menu.png"></span>
                            </button>


                            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item active"><a href="{{ path("view_must_have") }}" class="nav-link text-uppercase">Must-have<span class="sr-only">(current)</span></a></li>
                                        <li class="nav-item"><a href="{{ path("view_product_category", { 'category_id': 1, 'full': 0 }) }}" class="nav-link text-uppercase">corps</a></li>
                                        <li class="nav-item"><a href="{{ path("view_product_category", { 'category_id': 3, 'full': 0 }) }}" class="nav-link text-uppercase">visage</a></li>
                                        <li class="nav-item"><a href="{{ path("view_product_category", { 'category_id': 5, 'full': 0 }) }}" class="nav-link text-uppercase">cheveux</a></li>
                                        <li class="nav-item"><a href="{{ path("view_product_category", { 'category_id': 10, 'full': 0 }) }}" class="nav-link text-uppercase">maquillage</a></li>
                                        {# <li class="nav-item"><a href="{{ path("valeurs") }}" class="nav-link text-uppercase">valeurs</a></li>
                                        <li class="nav-item"><a href="{{ path("blog") }}" class="nav-link text-uppercase">blog</a></li> #}
                                    </ul>
                            </div>                           
                        </nav>
                    </div> 
                </div>
            </div>
